<% include ../partials/header %>


    <h1>Log Time</h1> 
    
    <h3>for "<%= event.name %>"</h3>
    <br>
    
	<form action="/events/<%= event._id %>/time" method="POST">
		<div class="form-group row text-left">
		    <div class="input-centered">
		    	<label for="start">Start Date and Time</label>
    			<input class="form-control" type="datetime-local" id="start" name="time[start]" value="<%= date %>" max="2050-12-31T23:59" required> 
		    </div>
		</div>
		<div class="form-group row text-left">
		    <div class="input-centered">
		    	<label for="end">End Date and Time</label>
    			<input class="form-control" type="datetime-local" id="end" name="time[end]" value="<%= date %>" max="2050-12-31T23:59" required>    
		    </div>
		</div>
		<button class="btn btn-primary ">Submit!</button>
	</form>
	<br>
	<a href="/events/<%= event._id %>">Go back</a>			
	

<% include ../partials/footer %>