<% include ../partials/header %>

    <h1>Edit Logged Time</h1> 
    
    <h3>for "<%= event.name %>"</h3>
    <br>
    
	<form action="/events/<%= event._id %>/time/<%= time._id %>?_method=PUT" method="POST">
		<div class="form-group row">
		    <div class="input-centered">
		    	<label for="start">Start Date and Time</label>
    			<input class="form-control" type="datetime-local" id="start" name="time[start]" value="<%= time.formatTimeForForm(time.start) %>">
		    </div>
		</div>
		<div class="form-group row">
		    <div class="input-centered">
		    	<label for="end">End Date and Time</label>
    			<input class="form-control" type="datetime-local" id="end" name="time[end]" value="<%= time.formatTimeForForm(time.end) %>">
		    </div>
		</div>
		<button class="btn btn-primary ">Submit!</button>
	</form>
	<br>
	<a href="/events/<%= event._id %>">Go back</a>			
	

<% include ../partials/footer %>