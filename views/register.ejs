<% include ./partials/header %>

    <h1>Sign Up Form</h1>
    <br>
    
    <form action="/register" method="POST" name="signup_form" onsubmit="return passwordsMatch()">
		<!-- naame name="" set on inputs below, or won't be passed in the POST -->
		<div class="form-group row">
			<div class="input-centered">
				<input class="form-control" type="text" name="username" placeholder="username" required>
			</div>
		</div>
		<div class="form-group row">
			<div class="input-centered">
				<input class="form-control" type="email" name="email" placeholder="email" required>
			</div>
		</div>
		<div class="form-group row">
			<div class="input-centered">
				<input class="form-control" type="password" name="password" placeholder="password" required>			
			</div>
		</div>
		<div class="form-group row">
			<div class="input-centered">
				<input class="form-control" type="password" name="password_again" placeholder="re-type password">					
			</div>
		</div>
		<!-- Can use an input with type equals submit or a button,
		  So long as the button is at the end of the form,
		  it'll submit in the same way
		-->
		<button class="btn btn-primary">Submit</button>
	</form>


<% include ./partials/footer %>


<script>
	function passwordsMatch() {
		var password1 = document.forms["signup_form"]["password"].value;
		var password2 = document.forms["signup_form"]["password_again"].value;
		
		if(password1 === password2) {
			return true;
		}
		
		else {
			alert("Your passwords do not match.");
			return false
		}
	}
</script>