<% include ../partials/header %>

	<h1>Create a New Event</h1>

	<form action="/events" method="POST">

		<div class="form-group">
            <div class="input-centered">
       	        <label for="name">Event Name</label>
				<input class="form-control" id="name" type="text" name="name" placeholder="name">
			</div>
		</div>
		<div class="form-group">
            <div class="input-centered"> 
       	        <label for="description">Event Description</label>
       	        <input class="form-control" id="description" type="text" name="description" placeholder="description">
			</div>
		</div>
		<div class="form-group">
            <div class="input-centered"> 
                <label for"color">Event Color</label>
				<input class="form-control" id="color" name="color" type="color">
            </div>
		</div>
			
		<div class="form-group">
			<button class="btn btn-primary">Submit</button>
		</div>
	</form>

	<a href="/events">Go back</a>			

<% include ../partials/footer %>