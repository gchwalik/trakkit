<% include ../partials/header %>

	<h1>Edit Event "<%= event.name %>"</h1>

	<form action="/events/<%= event._id %>?_method=PUT" method="POST">

		<div class="form-group">
            <div class="input-centered"> 
	            <label for="name">Event Name</label>
				<input class="form-control" id="name" type="text" name="event[name]" value="<%= event.name %>" required>
			</div>
		</div>
		<div class="form-group">
            <div class="input-centered"> 
	            <label for="description">Event Description</label>
				<input class="form-control" id="description" type="text" name="event[description]" value="<%= event.description %>" required>
			</div>
		</div>
		<div class="form-group">
            <div class="input-centered"> 
	            <label for"color">Event Color</label>
				<input class="form-control" id="color" type="color" name="event[color]" value="<%= event.color %>" required>
            </div>
		</div>
			
		<div class="form-group">
			<button class="btn btn-primary">Submit</button>
		</div>
	</form>

	<a href="/events/<%= event._id %>">Go back</a>			

<% include ../partials/footer %>