<% include ../partials/header %>

	<h1>Edit Event "<%= event.name %>"</h1>

	<form action="/events/<%= event._id %>?_method=PUT" method="POST">

		<div class="form-group">
            <div class="input-centered"> 
				<input class="form-control" type="text" name="event[name]" value="<%= event.name %>">
			</div>
		</div>
		<div class="form-group">
            <div class="input-centered"> 
				<input class="form-control" type="text" name="event[description]" value="<%= event.description %>">
			</div>
		</div>
		<div class="form-group">
            <div class="input-centered"> 
				<input class="form-control" type="color" name="event[color]" value="<%= event.color %>">
            </div>
		</div>
			
		<div class="form-group">
			<button class="btn btn-primary">Submit</button>
		</div>
	</form>

	<a href="/events">Go back</a>			

<% include ../partials/footer %>